////////////////////////////////////////////////////////////////////////////////
// ПРОЦЕДУРЫ - ОБРАБОТЧИКИ СОБЫТИЙ ФОРМЫ

// Процедура - обработчик события "ПередОткрытием" формы.
//
Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
	
	Список.Порядок.Установить("Порядок");
	
КонецПроцедуры // ПередОткрытием()

Процедура ВерхняяКоманднаяПанельПоказатьПравила(Кнопка)
	
	Если ЭлементыФормы.Список.ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	СсылкаНаПКЗ = ЭлементыФормы.Список.ТекущиеДанные.Ссылка;
	
	// перейти на правило в форме настройки
	Форма = ПолучитьОбщуюФорму("ПравилаОбмена");
	Форма.Конвертация = СсылкаНаПКЗ.Владелец.Владелец;
	Форма.ЭлементыФормы.ПравилаКонвертацииОбъектов.ТекущаяСтрока = СсылкаНаПКЗ.Владелец;
	Форма.ЭлементыФормы.ПравилаКонвертацииЗначений.ТекущаяСтрока = СсылкаНаПКЗ;
	Форма.Открыть();
	
КонецПроцедуры
